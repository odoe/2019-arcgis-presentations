{
  "name": "uc-2019-customizing-widgets",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "tsc"
  },
  "dependencies": {
    "esri-reveal.js-templates": "git+https://github.com/esri/reveal.js.git"
  },
  "devDependencies": {
    "@types/arcgis-js-api": "4.12.0",
    "dojo-typings": "1.11.9",
    "grunt": "1.0.4",
    "grunt-sass": "3.0.2",
    "prettier": "1.18.2",
    "typescript": "3.5.2"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "overrides": [
      {
